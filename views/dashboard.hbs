<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard - PocketBudget</title>
  {{>global_links}}
  <!-- Stepper -->
  <link rel="stylesheet" href="https://unpkg.com/bs-stepper/dist/css/bs-stepper.min.css">
  <script src="https://unpkg.com/bs-stepper/dist/js/bs-stepper.min.js"></script>
</head>
<body>
  <!-- HEADER -->
  {{>navbar}}
  <!-- END HEADER -->
  <section class="h-100 hero-overlay d-flex align-items-center jarallax">
    <div class="container mt-5">
      <div class="card">
        <div class="card-body">
          <center>
            <h1>Welcome, </h1>
            <hr />
            <h3>Current Budget</h3><br />
            <h4>${{totalBudget}}</h4>
            <h3>Remaining Funds</h3><br />
            <h4>${{remainingFunds}}</h4>
            <button class="btn btn-success btn-lg mx-5" type="button" data-toggle="modal" data-target="">Enter Transaction</button><br />
            <button class="btn btn-success btn-lg mx-5" type="button" data-toggle="modal" data-target="">View Transactions</button><br />
          </center>
        </div>
      </div>
    </div>
    <img class="jarallax-img opacity-75" src="https://images.unsplash.com/photo-1504983376254-592a0ea9b0cd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3291&q=80">
  </section>
  <!-- FOOTER -->
  {{>footer}}
  <!-- END FOOTER -->
  <script type="text/javascript">
  jarallax(document.querySelectorAll('.jarallax'));
  </script>
</body>
</html>

                    <div class="container">
                        <div class="row h-100">
                            <div class="col-sm-12 my-auto">
                                <h1 class="display-2">PocketBudget</h1>
                                <h2 class="lead">Transactions</h2>
                                <hr class="solid big_margin">
                            </div>
                        </div>
                    </div>
